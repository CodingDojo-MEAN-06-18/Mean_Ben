<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B" crossorigin="anonymous">
    <title>New</title>
  </head>
  <body>
    <div class="container">
      <ul>
        <% if(messages.errors) {%>
        <% for(var message of messages.errors) %>
        <li><%= message %></li>
        <% } %>
      </ul>
      <form action="/create" method="POST">
        <div class="form-group">
          <label for="exampleInputName">Name:</label>
          <input type="text" class="form-control" id="exampleInputName" aria-describedby="nameHelp" placeholder="Enter name" name='name'>
        </div>
        <div class="form-group">
          <label for="exampleInputLeg">Leg:</label>
          <input type="number" class="form-control" id="exampleInputLeg" placeholder="Enter how many legs" name="leg">
        </div>
        <div class="form-group">
          <label for="exampleInputHabit">Habit:</label>
          <input type="text" class="form-control" id="exampleInputHabit" placeholder="Enter Habit" name="habit">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/">
          <button type="button" class="btn btn-info ">Go Back</button>
        </a>
      </form>
    </div>
  </body>
</html>
